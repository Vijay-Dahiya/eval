<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#BC1C2B">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:fontFamily="@font/roboto_medium"
        android:text="WELCOME"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Masai school is a 21st century coding school that cares about you!"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/masai_homepage_icon_1"
        app:layout_constraintTop_toBottomOf="@+id/intro"
        android:layout_marginTop="60dp"/>
    <ImageView
        android:id="@id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/signin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/image2"
        app:layout_constraintEnd_toEndOf="@+id/image2"
        app:layout_constraintBottom_toBottomOf="@+id/image2"
        app:layout_constraintTop_toTopOf="@+id/image2"
        android:text="Sign In"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#BC1C2B"
        android:fontFamily="@font/roboto_medium"/>

    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image2"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/signup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/image3"
        app:layout_constraintEnd_toEndOf="@+id/image3"
        app:layout_constraintBottom_toBottomOf="@+id/image3"
        app:layout_constraintTop_toTopOf="@+id/image3"
        android:text="Create an Account"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"/>





</androidx.constraintlayout.widget.ConstraintLayout>